<%- include('partials/header') -%>
<div class="container mt-5">
  <div class="row mt-5">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-body user-info-card">
          <h5 class="card-title">User Information</h5>
          <p class="card-text"><strong>User Name:</strong> <%= user.userName %></p>
          <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
          <a href="/logout" class="btn btn-primary">Logout</a>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Add a Post</h5>
          <form action="/post/createPost" enctype="multipart/form-data" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title">
            </div>
            <div class="mb-3">
              <label for="caption" class="form-label">Caption</label>
              <textarea class="form-control" id="caption" name="caption"></textarea>
            </div>
            <div class="mb-3">
              <label for="imgUpload" class="form-label">Image</label>
              <input type="file" class="form-control" id="imageUpload" name="file">
            </div>
            <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h2 class="mb-4">Posts</h2>
      <div class="row">
        <% for (var i = 0; i < posts.length; i += 2) { %>
          <div class="col-md-6 mb-4">
            <div class="card-deck">
              <% if (i < posts.length) { %>
                <div class="card mb-4 fixed-card">
                  <a href="/post/<%= posts[i]._id%>">
                    <img class="card-img-top fixed-image" src="<%= posts[i].image%>" alt="Post Image">
                  </a>
                  <div class="card-body">
                    <h5 class="card-title"><a href="/post/<%= posts[i]._id%>"><%= posts[i].title %></a></h5>
                    <p class="card-text small text-muted">From: <%= posts[i].userName %>, <%= posts[i].createdAt.toLocaleDateString('en-US') %></p>
                    <p class="card-text"><%= posts[i].caption %></p>
                  </div>
                </div>
              <% } %>
              <% if (i + 1 < posts.length) { %>
                <div class="card mb-4 fixed-card">
                  <a href="/post/<%= posts[i+1]._id%>">
                    <img class="card-img-top fixed-image" src="<%= posts[i+1].image%>" alt="Post Image">
                  </a>
                  <div class="card-body">
                    <h5 class="card-title"><a href="/post/<%= posts[i+1]._id%>"><%= posts[i+1].title %></a></h5>
                    <p class="card-text small text-muted">From: <%= posts[i+1].userName %>, <%= posts[i+1].createdAt.toLocaleDateString('en-US') %></p>
                    <p class="card-text"><%= posts[i+1].caption %></p>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
      <div class="row justify-content-center mt-5">
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div>  
    </div>  
  </div>
</div>
<%- include('partials/footer') -%>

